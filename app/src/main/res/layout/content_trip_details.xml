<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.techwarriors.mav_admin.TripDetails"
    tools:showIn="@layout/activity_trip_details">

    <EditText
        android:id="@+id/PTdriver_id_trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/PTtrip_id"
        android:layout_below="@+id/PTtrip_id"
        android:maxLength="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Driver UTA ID"
        android:inputType="number" />

    <Spinner
        android:id="@+id/S_source"
        android:layout_width="215dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/S_status"
        android:layout_below="@+id/PTdriver_id_trip"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/S_destination"
        android:layout_width="215dp"
        android:layout_height="35dp"
        android:layout_below="@+id/S_source"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <Spinner
        android:id="@+id/S_status"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"

        android:layout_below="@+id/S_destination"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/Btnsubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onshowclick"
        android:text="Show Records" />

</RelativeLayout>
